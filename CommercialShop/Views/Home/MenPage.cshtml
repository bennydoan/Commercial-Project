@{
    ViewData["Title"] = "ChelseaFc-Men";
}

@model IEnumerable<Product>

<div class="col-lg-12 mt-5 d-md-flex">
    <div class="col-lg-2 p-2">
        <partial name="~/Views/Shared/_Partial/_FilterPartial.cshtml" model="ViewBag.MenCategories" />
    </div>

    <div class=" col-12 col-lg-10 px-3 row g-3">
        @foreach (var product in Model) 
        {
            <div class="col-md-4 col-6">
                @foreach (var image in product.images)
                {
                    <a class="text-dark text-decoration-none" asp-action="ProductDetails" asp-controller="Product" asp-route-id="@product.ProductId">
                        <img class="img-fluid productImage mb-3" src="@image.ImagePath" alt="@product.ProductName"/>
                        <p class="fw-bold">@product.ProductName</p>
                        
                    </a>
                    <p class="fw-bold">

                        @($"$A{product.Price}")
                    </p>
                }
            </div>
        }

    </div>
</div>




